<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.expensesmanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_piggybank"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_piggybank"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CalendarActivity"></activity>
        <activity android:name=".Toolbar" />
        <activity android:name=".DetailsActivity" />
        <activity android:name=".chart" />
        <activity android:name=".RetrieveData" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>