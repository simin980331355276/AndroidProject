<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".EditFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="429dp"
        android:layout_height="284dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="8dp"
        tools:context=".DetailsActivity">


        <RelativeLayout
            android:layout_width="383dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">


            <Spinner
                android:id="@+id/vCategories2"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="49dp"
                android:layout_marginLeft="48dp"
                android:layout_marginEnd="58dp"
                android:layout_marginRight="58dp"
                android:layout_marginBottom="70dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="59dp"
                android:layout_marginRight="59dp"
                android:layout_marginBottom="17dp"
                android:clickable="true"
                app:srcCompat="@drawable/ic_confirmation" />

            <EditText
                android:id="@+id/vType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="79dp"
                android:layout_marginRight="79dp"
                android:layout_marginBottom="183dp"
                android:text="Edit"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/vAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="79dp"
                android:layout_marginRight="79dp"
                android:layout_marginBottom="135dp"
                android:inputType="number"
                android:text="Edit"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="144dp"
                android:layout_toStartOf="@+id/vAmount"
                android:layout_toLeftOf="@+id/vAmount"
                android:text="$"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/vDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="79dp"
                android:layout_marginRight="79dp"
                android:layout_marginBottom="229dp"
                android:text="Edit"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/display_date"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="38dp"
                android:layout_marginLeft="38dp"
                android:layout_marginEnd="260dp"
                android:layout_marginRight="260dp"
                android:layout_marginBottom="236dp"
                android:text="Date"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/display_Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="302dp"
                android:layout_marginRight="302dp"
                android:layout_marginBottom="196dp"
                android:text="Type"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/display_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="246dp"
                android:layout_marginRight="246dp"
                android:layout_marginBottom="92dp"
                android:text="Categories"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/display_Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="273dp"
                android:layout_marginRight="273dp"
                android:layout_marginBottom="148dp"
                android:text="Amount"
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>